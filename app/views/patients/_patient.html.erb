<div id="<%= dom_id patient %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">First name:</strong>
    <%= patient.first_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Surname:</strong>
    <%= patient.surname %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Birth date:</strong>
    <%= patient.birth_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= patient.gender %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= patient.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= patient.phone %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Mobile phone:</strong>
    <%= patient.mobile_phone %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Internet:</strong>
    <%= patient.internet %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address line1:</strong>
    <%= patient.address_line1 %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address line2:</strong>
    <%= patient.address_line2 %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Municipality:</strong>
    <%= patient.municipality.externalize if patient.municipality_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">National number:</strong>
    <%= patient.national_number %>
  </div>
</div>
