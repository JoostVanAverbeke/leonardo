<%= form_with(model: [ @order, observation ], class: "contents") do |form| %>
  <% if observation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(observation.errors.count, "error") %> prohibited this observation from being saved:</h2>

      <ul class="list-disc ml-6">
        <% observation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :property_id %>
    <%= form.collection_select :property_id, Property.all, :id, :externalize, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:property_id].none?, "border-red-400 focus:outline-red-600": observation.errors[:property_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:value].none?, "border-red-400 focus:outline-red-600": observation.errors[:value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :unit %>
    <%= form.text_field :unit, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:unit].none?, "border-red-400 focus:outline-red-600": observation.errors[:unit].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :alternate_unit %>
    <%= form.text_field :alternate_unit, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:alternate_unit].none?, "border-red-400 focus:outline-red-600": observation.errors[:alternate_unit].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :alternate_unit_coding_system %>
    <%= form.text_field :alternate_unit_coding_system, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:alternate_unit_coding_system].none?, "border-red-400 focus:outline-red-600": observation.errors[:alternate_unit_coding_system].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :references_range %>
    <%= form.text_field :references_range, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:references_].none?, "border-red-400 focus:outline-red-600": observation.errors[:references_].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :abnormal_flags %>
    <%= form.text_field :abnormal_flags, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:abnormal_flags].none?, "border-red-400 focus:outline-red-600": observation.errors[:abnormal_flags].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :result_status %>
    <%= form.select :result_status, Observation.result_statuses.keys.map { |g| [g.humanize, g] }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:result_status].none?, "border-red-400 focus:outline-red-600": observation.errors[:result_status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :observation_date_time %>
    <%= form.datetime_field :observation_date_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:observation_date_time].none?, "border-red-400 focus:outline-red-600": observation.errors[:observation_date_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :analysis_date_time %>
    <%= form.datetime_field :analysis_date_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:analysis_date_time].none?, "border-red-400 focus:outline-red-600": observation.errors[:analysis_date_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :observation_comment %>
    <%= form.textarea :observation_comment, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": observation.errors[:observation_comment].none?, "border-red-400 focus:outline-red-600": observation.errors[:observation_comment].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
