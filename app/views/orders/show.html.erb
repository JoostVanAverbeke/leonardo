<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Observations</h1>
    <%= link_to "New observation", new_order_observation_path(@order), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="observations" class="min-w-full">
    <table class="w-full border-collapse bg-white text-left text-sm text-gray-500">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Id</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Property</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Value</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Unit</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">References range</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Abnormal flags</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Result Status</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900">Observation date time</th>
          <th scope="col" class="px-6 py-4 font-medium text-gray-900"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 border-t border-gray-100">
        <% @order.observations.each do |observation| %>
          <tr id="<%= dom_id observation %>">
            <%= render observation %>
            <td class="flex justify-end gap-4 px-6 py-4 font-medium">
             <%= link_to "Edit", edit_order_observation_path(@order, observation) %>
            <%= button_to "Destroy observation", [ @order, observation ], method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
           </tr>  
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "Edit this order", edit_order_path(@order), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to orders", orders_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this order", @order, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
